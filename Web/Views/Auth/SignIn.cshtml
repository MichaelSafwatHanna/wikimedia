@model Core.Models.UserAccount

<div class="row align-items-center h-100">
    <div class="col-lg-8">
        <img class="img-fluid" src="/images/bg1.png" alt="" />
    </div>
    <div class="col-lg-4">
        <h2>Sign In</h2>
        <hr>
        @using (Html.BeginForm("SignInSubmit", "Auth"))
        {
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Email) })
                </div>
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Password) })
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Sign In </button>
            </div>
        }

        <p><a href="#">Forgot Password?</a></p>
        <div class="modal-footer">Don't have an account? <a href="@Url.Action("SignUp", "Auth")">Create one</a></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
